#!/usr/bin/env bash

# set -eo pipefail

buildpack=$(dirname $(dirname $0))
echo >&2 "The current buildpack directory $buildpack."

ls=$(ls)
echo >&2 "$ls."

echo >&2 "Compiling... "

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)
cache=$(cd "$2/" && pwd)

echo >&2 "build dir: $build"


cp $buildpack/agent $build
echo >&2 "Compilation done."
